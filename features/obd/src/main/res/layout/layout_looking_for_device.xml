<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accountPopupDialogItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Content -->
    <LinearLayout
        android:layout_width="@dimen/account_dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_custom_dialog_bubble"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/account_dialog_margin_side"
        android:paddingEnd="@dimen/account_dialog_margin_side"
        android:paddingBottom="@dimen/account_dialog_padding_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/accountPopupStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_dialog_title_margin_top"
            android:text="@string/odb_looking_for_a_device"
            android:textAlignment="center"
            android:textColor="@color/colorDefButtonStroke"
            android:textSize="@dimen/account_dialog_account_status_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_dialog_title_margin_top"

            android:layout_marginBottom="@dimen/account_dialog_account_status_margin_bottom"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/odb_please_wait_while_we_search_for_your_device"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_onboard_logo2"
            app:tint="@color/colorDefButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/account_dialog_title_margin_top"

            android:layout_marginBottom="@dimen/account_dialog_account_status_margin_bottom"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/odb_once_we_find_it"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/takingTooLongText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/obd_taking_too_long"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>