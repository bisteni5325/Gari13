<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderbordItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/leaderbordItemContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leaderboard_item_margin_horizontal"
        android:layout_marginTop="@dimen/leaderboard_item_margin_top"
        android:layout_marginEnd="@dimen/leaderboard_item_margin_horizontal"
        android:layout_marginBottom="@dimen/leaderboard_item_margin_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leaderboardPosition"
            android:layout_width="@dimen/leaderboard_item_icon_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/colorEventTripMileageText"
            android:textSize="@dimen/leaderboard_item_place_text_size"
            tools:text="123." />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/leaderboard_item_icon_size"
            android:layout_height="@dimen/leaderboard_item_icon_size"
            android:layout_marginStart="@dimen/leaderboard_item_icon_margin_start"
            android:layout_marginEnd="@dimen/leaderboard_item_icon_margin_end"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/leaderboardUserIcon"
                android:src="@drawable/ic_no_avatar_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/leaderboardNickName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/leaderboard_full_name"
            android:textColor="@color/colorLeaderboardItemText"
            android:textSize="@dimen/leaderboard_item_name_text_size" />

        <TextView
            android:id="@+id/leaderboardScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:textColor="@color/colorEventTripMileageText"
            android:textSize="@dimen/leaderboard_item_place_text_size"
            tools:text="198" />

    </LinearLayout>


</LinearLayout>