<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background_location_permissions_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:clickable="false"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_wizard_page_bg_top"
            android:elevation="4dp"
            android:translationZ="4dp"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/layout_telematics_location_settings_b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_wizard_page_bg_center"
            android:buttonTint="@color/color_permissions_check"
            android:checked="true"
            android:clickable="false"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="@string/wizard_telematics_allow_all_time"
            android:textSize="@dimen/permissions_settings_text_size"
            android:textStyle="bold"
            android:translationZ="6dp"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/layout_telematics_location_settings_b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_wizard_page_bg_center"
            android:buttonTint="@color/color_permissions_check"
            android:checked="false"
            android:clickable="false"
            android:drawableStart="@drawable/ic_wizard_page_disable_rect"
            android:elevation="4dp"
            android:padding="10dp"
            android:text=""
            android:textSize="@dimen/permissions_settings_text_size"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:layout_constraintTop_toBottomOf="@id/layout_telematics_location_settings_b1" />

        <RadioButton
            android:id="@+id/layout_telematics_location_settings_b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_wizard_page_bg_center"
            android:buttonTint="@color/color_permissions_check"
            android:checked="false"
            android:clickable="false"
            android:drawableStart="@drawable/ic_wizard_page_disable_rect"
            android:elevation="4dp"
            android:padding="10dp"
            android:text=""
            android:textSize="@dimen/permissions_settings_text_size"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:layout_constraintTop_toBottomOf="@id/layout_telematics_location_settings_b2" />

        <RadioButton
            android:id="@+id/layout_telematics_location_settings_b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_wizard_page_bg_bottom"
            android:buttonTint="@color/color_permissions_check"
            android:checked="false"
            android:clickable="false"
            android:drawableStart="@drawable/ic_wizard_page_disable_rect"
            android:elevation="4dp"
            android:padding="10dp"
            android:text=""
            android:textSize="@dimen/permissions_settings_text_size"
            android:textStyle="bold"
            android:translationZ="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_telematics_location_settings_b3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>